{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules/*", "./dist/*", "./types/*"]
}
